// Updated Prisma Schema with Role System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  weight    Float    @default(70.0)
  role      String   @default("user") // "user" or "admin"
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cardioActivities CardioActivity[]
  muscuActivities  MuscuActivity[]
  weightEntries    WeightEntry[]
  exercises        Exercise[]

  @@index([role])
}

model Exercise {
  id     String @id @default(uuid())
  name   String
  type   String // "cardio" or "muscu"
  userId String

  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardioActivities CardioActivity[]
  muscuActivities  MuscuActivity[]

  @@unique([userId, name, type])
}

model CardioActivity {
  id         String   @id @default(uuid())
  date       DateTime @db.Date
  minutes    Int
  intensity  String
  calories   Int
  userId     String
  exerciseId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model MuscuActivity {
  id         String   @id @default(uuid())
  date       DateTime @db.Date
  sets       Int
  reps       Int
  weight     Float    @default(0)
  calories   Int
  userId     String
  exerciseId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model WeightEntry {
  id         String   @id @default(uuid())
  date       DateTime @db.Date
  weight     Float
  muscleMass Float?
  bodyFat    Float?
  userId     String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}
